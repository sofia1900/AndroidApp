<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.ex04.presentation.Ex04Activity" >

    <com.faltenreich.skeletonlayout.SkeletonLayout
        android:id="@+id/skeletonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Views to mask -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_burger"
                android:layout_width="0dp"
                android:layout_height="270dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/burguer" />

            <TextView
                android:id="@+id/label_ofert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"
                android:padding="10dp"
                tools:text="-15%"
                android:textSize="35sp"
                android:background="@color/orange"/>

            <TextView
                android:id="@+id/label_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/image_burger"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/image_burger"
                tools:text="Burger it"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="43dp"
                app:layout_constraintTop_toBottomOf="@id/image_burger"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/img_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:src="@drawable/emojilike"/>


                <TextView
                    android:id="@+id/label_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_likes"
                    android:layout_alignParentBottom="true"
                    android:textSize="20sp"
                    tools:text="98%"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/emojitime"
                    android:layout_toLeftOf="@id/label_time"/>

                <TextView
                    android:id="@+id/label_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="20sp"
                    tools:text="20-30min"/>

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.faltenreich.skeletonlayout.SkeletonLayout>

    <include
        android:id="@+id/view_error"
        layout="@layout/view_error"
        android:visibility="invisible"/>

</FrameLayout>

