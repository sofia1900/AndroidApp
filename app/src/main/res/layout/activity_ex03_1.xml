<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:background="@drawable/burguer"
        android:id="@+id/pather2" >

        <TextView
            android:id="@+id/label_ofert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            tools:text="-15%"
            android:textSize="25sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/label_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="35sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/pather2"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_likes"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:src="@drawable/emojilike"/>


        <TextView
            android:id="@+id/label_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_likes"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/emojitime"
            android:layout_toLeftOf="@id/label_time"/>

        <TextView
            android:id="@+id/label_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"/>



    </RelativeLayout>



</RelativeLayout>