<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/image_burger"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/burguer" />

    <TextView
        android:id="@+id/label_ofert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        tools:text="-15%"
        android:textSize="35sp"
        android:background="@color/orange"/>

    <TextView
        android:id="@+id/label_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/image_burger"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/image_burger"
        tools:text="Burger it"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/img_likes"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_burger"
        tools:src="@drawable/emojilike"/>


    <TextView
        android:id="@+id/label_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_likes"
        app:layout_constraintTop_toBottomOf="@id/image_burger"
        app:layout_constraintBottom_toBottomOf="@id/img_likes"
        android:textSize="20sp"
        tools:text="98%"/>

    <TextView
        android:id="@+id/label_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_burger"
        app:layout_constraintBottom_toBottomOf="@id/img_likes"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        tools:text="20-30min"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_burger"
        app:layout_constraintBottom_toBottomOf="@id/img_likes"
        app:layout_constraintEnd_toStartOf="@id/label_time"
        android:src="@drawable/emojitime" />



</androidx.constraintlayout.widget.ConstraintLayout>